@page
@model eCommerce.Pages.Customer.Home.DetailsModel
@{
}


<div class="">
    <form method="post">
        <input type="hidden" asp-for="ShoppingCart.ProductID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header bg-light text-light ml-0 row container">
                    <div class="col-12 col-md-6">
                        <h1 class="text-primary">@Model.ShoppingCart.Product.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-muted">@Model.ShoppingCart.Product.Cost.ToString("c")</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">

                                    <div class="col-12">
                                        <span class="badge bg-info h3">@Model.ShoppingCart.Product.Category.Name</span>
                                        <span class="badge bg-warning">@Model.ShoppingCart.Product.ProductType.Name</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.ShoppingCart.Product.Description)</p>
                                        <div class="row py-4">
                                            <div class="col-2"><label class="h3">Seller</label></div>
                                            <div class="col-10">
                                                <input type="text"  value="@Model.ShoppingCart.Product.ApplicationUser.FullName" disabled class="form-control rounded" />
                                           
                                            </div>
                                        </div>
                                        <div class="row py-4">
                                            <div class="col-2"><label asp-for="ShoppingCart.Count" class="h3"></label></div>
                                            <div class="col-10">
                                                <input type="text" asp-for="ShoppingCart.Count" class="form-control rounded" />
                                                <span asp-validation-for="ShoppingCart.Count" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.ShoppingCart.Product.Image" width="100%" class="rounded" />
                            </div>


                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-page="Index" class="btn btn-secondary btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            <button type="submit" class="btn btn-primary btn-square form-control btn-lg" style="height:50px;">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
 }
